<h1>Delete Cube</h1>
<div class="form">
    {{#with cube}}
    <form action='/delete/{{_id}}' method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{name}}" disabled>
        <label for="name">Description</label>
        <textarea id="name" name="description"
                  disabled>{{description}}</textarea>
        <label for="image">Image</label>
        <input type="text" id="image" name="imageUrl" value="{{imageUrl}}"
               disabled>
        <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficultyLevel" disabled>
    {{/with}}
    {{#each options}}
        {{> option}}
    {{/each}}
</select>
    <input type="submit" value="delete">
</form>
</div>