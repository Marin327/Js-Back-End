{{#with cube}}
    <h1>Attach a new accessory</h1>
    <div class="form">
        <h2>{{name}}</h2>
        <img class="cube"
             src="{{imageUrl}}">
    <form action='' method="POST">
        <label for="accessory">Accessories</label>
    <select id="accessory" name="accessory">
{{/with}}
{{#if (isNotEmpty accessories)}}
    {{#each accessories}}
            <option value="{{_id}}">{{name}}</option>
    {{/each}}
{{/if}}
</select>
    <h3 class="italic">This cube has all available
        accessories so far or
        there
        is no available at all...
    </h3>
    <input type="submit" value="Attach">
</form>
    <a class="btn" href="/">Back</a>
</div>

