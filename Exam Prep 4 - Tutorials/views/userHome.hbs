<h1 class="text-center">Courses</h1>
<section>
    <a href="/custom/create" class="btn btn-warning ">Create Course</a>
    <form class="search float-right" action="/custom/search" method="post">
        <label>Search: </label>
        <input type="text" name="searchParam">
        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</section>

<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
            {{#each customs}}
                {{> userCustom}}
            {{else}}
                <h3 class="text-center">No courses...</h3>
            {{/each}}
        </div>
    </div>
</div>
